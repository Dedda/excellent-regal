<h1><%= @gallery.name %></h1>

<span><%= link "Edit", to: Routes.gallery_path(@conn, :edit, @gallery) %></span>
<span><%= link "Back", to: Routes.gallery_path(@conn, :index) %></span>

<div class="gallery-wrapper">

  <%= for picture <- @pictures do %>
  	<%= RegalWeb.PictureView.gallery_thumbnail(@conn, picture) %>
  <% end %>

</div>

<span><%= link "Delete", to: Routes.gallery_path(@conn, :delete, @gallery), method: :delete, data: [confirm: "Are you sure?"] %></span>