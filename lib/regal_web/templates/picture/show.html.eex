<h1>Showing: <%= @picture.name %></h1>

<img src="<%= Routes.picture_path(@conn, :raw, @picture.external_id) %>"
  width="100%">

<ul>
  <li>
    <strong>Width:</strong>
    <%= @picture.width %>
  </li>

  <li>
    <strong>Height:</strong>
    <%= @picture.height %>
  </li>

  <li>
    <strong>Format:</strong>
    <%= @picture.format %>
  </li>

  <li>
    <strong>Filesize:</strong>
    <%= @filesize %>
  </li>
</ul>

<h3>Tags:</h3>
<ul>
  <%= for tag <- @tags do%>
    <li><%= link tag.name, to: Routes.tag_path(@conn, :show, tag.id) %><span class="dot tag-<%= tag.color %>"></span></li>
  <% end %>
</ul>

<span><%= link "Edit", to: Routes.picture_path(@conn, :edit, @picture) %></span>
<span><%= link "Back", to: Routes.picture_path(@conn, :index) %></span>
<span><a href="<%= Routes.picture_path(@conn, :raw, @picture.external_id) %>" download="<%= @download_name %>">Download</a></span>