<h1>Show Tag</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @tag.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @tag.description %>
  </li>

  <li>
    <strong>Color:</strong>
    <%= @tag.color %>
  </li>

  <li>
    <strong>Tagged pictures</strong>
    <%= @n_pics %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.tag_path(@conn, :edit, @tag) %></span>
<span><%= link "Back", to: Routes.tag_path(@conn, :index) %></span>
